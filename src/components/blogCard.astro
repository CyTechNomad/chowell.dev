---
import { primaryColor, secondaryColor, tertiaryColor } from "../../public/styles/colors.astro";
export interface Card {
  title: string;
  description: string;
  tags: string[];
  date: Date;
}
const { slug = "lost", title, description = "", tags = [], date } = Astro.props;
---

<li class="link-card">
  <a href={"/blog/" + slug}>
    <div class="titleanddate">
      <h2>
        {title}
      </h2>
      <time
        class="date"
        datetime={date}
      >
        {date.toISOString().substring(0, date.toISOString().indexOf("T"))}
      </time>
    </div>

    <p class="description">
      {description}
    </p>

    <div class="tags">
      {tags.map((tag: string) => <div class="tag">{tag}</div>)}
    </div>
  </a>

  <style define:vars={{ primaryColor, secondaryColor, tertiaryColor }}>
    .link-card {
      flex-grow: 1rem;
      list-style: none;
      display: flex;
      padding: 0.25rem;
      margin: 0.5rem 0;
      background-color: white;
      background-image: none;
      background-size: 400%;
      border-radius: 0.6rem;
      background-position: 100%;
      transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
      a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 1rem 1.3rem;
        border-radius: 0.35rem;
        color: #111;
        background-color: white;
        opacity: 0.8;

        .description {
          margin: 0;
          color: var(--tertiaryColor);
          font-size: 0.9rem;
        }
        .tags {
          display: flex;
          flex-direction: row;
          flex-wrap: wrap;
          gap: 0.5rem;
          margin-top: 1rem;

          .tag {
            padding: 0.25rem;
            color: white;
            background: var(--secondaryColor);
            border-radius: 0.25rem;
          }
        }

        .titleanddate {
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          align-items: center;
          margin: 0;
          .date {
            color: var(--tertiaryColor);
            font-size: 0.8rem;
          }
        }
      }
    }
  </style>
</li>
