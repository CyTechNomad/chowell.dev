---
export interface Card {
  title: string;
  body: string;
  href: string;
  src: string;
  alt: string;
}
const { slug = "lost", title = "BlogPost", description = "Hope to write more soon" } = Astro.props;
---

<li class="link-card">
  <a href={"/blog/" + slug}>
    <h2>
      {title}
    </h2>
    <p>
      {description}
    </p>
  </a>
</li>

<style>
  .link-card {
    flex-grow: 1rem;
    list-style: none;
    display: flex;
    padding: 0.25rem;
    margin: 0.5rem 0;
    background-color: white;
    background-image: none;
    background-size: 400%;
    border-radius: 0.6rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .project {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    width: 100%;
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #111;
    background-color: white;
    opacity: 0.8;
    .svg {
      margin-right: 1rem;
      height: 2.5rem;
      width: 2.5rem;
    }
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
